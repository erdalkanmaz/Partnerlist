<?xml version="1.0" encoding="UTF-8"?>
<service>
    <id>PartnerlistService</id>
    <name>Partnerlist Application</name>
    <description>Partnerlist Müşteri Listesi Yönetim Uygulaması</description>
    <executable>java</executable>
    <arguments>-jar "%~dp0partnerlist-1.0.0.jar"</arguments>
    <workingdirectory>%~dp0</workingdirectory>
    <logmode>rotate</logmode>
    <logpath>logs</logpath>
    <startmode>Automatic</startmode>
    <delayedAutoStart>true</delayedAutoStart>
    <onfailure action="restart" delay="10 sec"/>
    <onfailure action="restart" delay="20 sec"/>
    <resetfailure>1 hour</resetfailure>
</service>
